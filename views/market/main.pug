block content
    .content-wrap
        #market-main-carousel.carousel.slide(data-ride='carousel')
            // Indicators
            ul.carousel-indicators
                li.active(data-target='#market-main-carousel' data-slide-to='0')
                li(data-target='#market-main-carousel' data-slide-to='1')
                li(data-target='#market-main-carousel' data-slide-to='2')
            // Wrapper for slides
            .carousel-inner(role='listbox')
                .carousel-item.active
                    img(src='/images/market/chicago.jpg' alt='example')
                    .carousel-caption

                .carousel-item
                    img(src='/images/market/la.jpg' alt='example')
                    .carousel-caption
                
                .carousel-item
                    img(src='/images/market/ny.jpg' alt='example')
                    .carousel-caption

            // Controls
            a.left.carousel-control-prev(href='#market-main-carousel' role='button' data-slide='prev')
                span.carousel-control-prev-icon
            a.right.carousel-control-next(href='#market-main-carousel' role='button' data-slide='next')
                span.carousel-control-next-icon
        hr        